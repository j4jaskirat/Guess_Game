import random
randomnumber=random.randint(1,100)
userguess=None
Guesses=0
while(userguess!=randomnumber):

    userguess=int(input("Please Enter Your Guess:"))
    Guesses +=1
    if userguess==randomnumber:
        print("You Guess rightğŸ‘Œ")
    else:
        if userguess>randomnumber:
            print("Your guess is wrong!ğŸ˜’, Please enter the Smallest number")
        else:
            print("Your guess is wrong!ğŸ˜’, Please enter the Largest number")


print(f"You guessed th number in {Guesses} gusses")
with open("Desktop/highscore.txt","r") as f:
    highscore=int(f.read())

if Guesses<highscore:
    print("You Broke the High scoreğŸ‰")
    with open("Desktop/highscore.txt","w") as f:
        f.write(str(Guesses))
